# Ellcworth Backend (.env.example)
# Copy to: Backend/.env
# Do NOT commit real secrets or production DB URIs.

# -----------------------
# Server
# -----------------------
PORT=8000
NODE_ENV=development

# -----------------------
# CORS (used by Backend/index.js)
# - CLIENT_URL, ADMIN_URL, ALLOWED_ORIGINS are comma-separated lists.
# - In development, index.js also fail-opens if allowlist is empty and NODE_ENV != production,
#   but we still set these explicitly for predictable behaviour.
# -----------------------
CLIENT_URL=http://localhost:5173
ADMIN_URL=http://localhost:3000
ALLOWED_ORIGINS=

# -----------------------
# Security / rate limit (used by Backend/index.js)
# -----------------------
RATE_LIMIT_PER_MINUTE=240

# -----------------------
# Database
# -----------------------
MONGO_URI=mongodb://127.0.0.1:27017/ellcworth

# -----------------------
# Auth
# Backend supports JWT_SECRET (preferred) or JWT_SEC (fallback in auth middleware).
# -----------------------
JWT_SECRET=supersecretjwt
JWT_EXPIRES=10d
